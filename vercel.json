{
  "builds": [
    {"src": "api/ta_decision.py", "use": "@vercel/python"},
    {"src": "api/run_once.py", "use": "@vercel/python"},
    {"src": "api/last_decision.py", "use": "@vercel/python"},
    {"src": "api/healthz.py", "use": "@vercel/python"}
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "routes": [
    {"src": "/api/ta_decision", "dest": "api/ta_decision.py"},
    {"src": "/api/run_once", "dest": "api/run_once.py"},
    {"src": "/api/last_decision", "dest": "api/last_decision.py"},
    {"src": "/api/healthz", "dest": "api/healthz.py"},
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/run_once",
      "schedule": "*/15 * * * *"
    }
  ],
  "excludeFiles": [
    "**/*.pyc",
    "**/__pycache__/**",
    ".git/**",
    ".venv/**",
    "global_agents/**",
    "src/**",
    "workers/**",
    "logs/**",
    "data/**",
    "static/**",
    "tests/**",
    "README.md",
    "Dockerfile"
  ]
}