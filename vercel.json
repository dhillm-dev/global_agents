{
  "functions": {
    "api/**/*.py": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/run_once",
      "schedule": "*/15 * * * *"
    }
  ],
  "excludeFiles": [
    "**/*.pyc",
    "**/__pycache__/**",
    ".git/**",
    ".venv/**",
    "global_agents/**",
    "src/**",
    "workers/**",
    "logs/**",
    "data/**",
    "static/**",
    "tests/**",
    "README.md",
    "Dockerfile"
  ]
}