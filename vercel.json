{
  "version": 2,
  "builds": [
    { "src": "api/healthz.py", "use": "@vercel/python" },
    { "src": "api/ta_decision.py", "use": "@vercel/python" },
    { "src": "api/run_once.py", "use": "@vercel/python" },
    { "src": "api/last_decision.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/healthz", "dest": "api/healthz.py" },
    { "src": "/api/ta_decision", "dest": "api/ta_decision.py" },
    { "src": "/api/ta_decision/healthz", "dest": "api/ta_decision.py" },
    { "src": "/api/run_once", "dest": "api/run_once.py" },
    { "src": "/api/last_decision", "dest": "api/last_decision.py" }
  ],
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "excludeFiles": [
    "**/*.pyc",
    "**/__pycache__/**",
    ".git/**",
    ".venv/**",
    "global_agents/**",
    "src/**",
    "workers/**",
    "logs/**",
    "data/**",
    "static/**",
    "tests/**",
    "README.md",
    "Dockerfile"
  ]
}